{% extends 'base.html.twig' %}

{% block title %}Scores{% endblock %}

{% block body %}
    <div class="bg-gray-900 text-gray-200 flex flex-col min-h-screen">
        <header class="bg-gray-800 py-6">
            <h1 class="text-center text-4xl font-bold">Scores des Joueurs</h1>
            <p class="text-center text-lg mt-2">Découvrez les performances de nos utilisateurs dans les jeux d'apprentissage</p>
        </header>

        <nav class="bg-gray-700 py-4">
            <div class="max-w-4xl mx-auto flex justify-center items-center space-x-6">
                <a href="../home" class="text-gray-200 hover:text-blue-400 transition duration-300 ease-in-out">Accueil</a>
                <a href="../game" class="text-gray-200 hover:text-blue-400 transition duration-300 ease-in-out">Jeu</a>
                <a href="../score" class="text-gray-200 hover:text-blue-400 transition duration-300 ease-in-out">Scores</a>
                <a href="../profil" class="text-gray-200 hover:text-blue-400 transition duration-300 ease-in-out ml-8">Profil</a>
                <a href="../login" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 hover:shadow-lg transition duration-300 ease-in-out">Se connecter</a>
            </div>
        </nav>

        <main class="flex-grow p-6">
            <h2 class="text-3xl font-bold text-center mb-6">Classement des Scores</h2>

            <div class="max-w-4xl mx-auto overflow-x-auto">
                <table class="min-w-full bg-gray-800 rounded-lg shadow-lg">
                    <thead>
                        <tr class="w-full bg-gray-700 text-gray-300 text-left text-sm uppercase tracking-wider">
                            <th class="py-3 px-4">Nom d'utilisateur</th>
                            <th class="py-3 px-4">Score</th>
                            <th class="py-3 px-4">Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="hover:bg-gray-700">
                            <td class="py-3 px-4">Alice</td>
                            <td class="py-3 px-4">1500</td>
                            <td class="py-3 px-4">2024-10-01</td>
                        </tr>
                        <tr class="hover:bg-gray-700">
                            <td class="py-3 px-4">Bob</td>
                            <td class="py-3 px-4">1200</td>
                            <td class="py-3 px-4">2024-09-30</td>
                        </tr>
                        <tr class="hover:bg-gray-700">
                            <td class="py-3 px-4">Charlie</td>
                            <td class="py-3 px-4">1800</td>
                            <td class="py-3 px-4">2024-09-29</td>
                        </tr>
                        <tr class="hover:bg-gray-700">
                            <td class="py-3 px-4">David</td>
                            <td class="py-3 px-4">2000</td>
                            <td class="py-3 px-4">2024-09-28</td>
                        </tr>
                        <tr class="hover:bg-gray-700">
                            <td class="py-3 px-4">Emma</td>
                            <td class="py-3 px-4">1600</td>
                            <td class="py-3 px-4">2024-09-27</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </main>

        <footer class="bg-gray-800 py-4">
            <div class="text-center">
                <p>&copy; 2024 MemorEase. Tous droits réservés.</p>
                <p><a href="#" class="text-blue-400 hover:underline">Contactez-nous</a></p>
            </div>
        </footer>
    </div>
{% endblock %}
