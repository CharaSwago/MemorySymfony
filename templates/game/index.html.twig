{% extends 'base.html.twig' %}

{% block title %}Memory game{% endblock %}

{% block body %}
    <section class="memory-game" id="memoryGame">
        {#
        {% for card in cards %}
            <div class="memory-card" data-framework="{{ card.name }}">
                <img class="front-face" src="{{ card.front }}" alt="{{ card.name }}">
                <img class="back-face" src="{{ card.back }}" alt="Memory Card">
            </div>
        {% endfor %}
        #}
    </section>

    <style>
        .memory-card {
            width: calc(25% - 10px);
