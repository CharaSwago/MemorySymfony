{% extends 'base.html.twig' %}

{% block title %}Jeu de Mémoire{% endblock %}

{% block body %}

    <div class="bg-gray-900 text-gray-200 flex flex-col min-h-screen">

        <main class="flex-grow p-6">
            <div class="max-w-4xl mx-auto">
                <section class="memory-game mx-auto">
                    {% for i in 1..25 %}
                        <div class="memory-card">
                            <img class="front-face" src="/images/card-front-placeholder.jpg" alt="Front Face" />
                            <img class="back-face" src="/images/card-back-placeholder.jpg" alt="Back Face" />
                        </div>
                    {% endfor %}
                </section>
            </div>
        </main>

        <footer class="bg-gray-800 py-4">
            <div class="max-w-6xl mx-auto text-center text-gray-400">
                <p>&copy; 2024 MemorEase. Tous droits réservés.</p>
                <p><a href="#" class="text-blue-400 hover:underline">Contactez-nous</a></p>
            </div>
        </footer>
    </div>
    
    <button id="startButton">Start</button>
    <button id="resetButton">Reset</button>
    <h1 id="chrono">00:00:00</h1>
    
    <section class="memory-game" id="memoryGame">
        
        {% for card in cards %}
            <div class="memory-card" data-framework="{{ card.name }}">
                <img class="front-face" src="{{ asset('Asset/' ~ card.front) }}" alt="{{ card.name }}">
                <img class="back-face" src="{{ asset('Asset/back.jpg') }}" alt="Memory Card">
            </div>
        {% endfor %}
        
    </section>


    <style>
        .memory-game {
            display: grid;

            grid-template-columns: repeat(3, 1fr); /* 3 colonnes de taille égale */
            grid-gap: 15px; /* Espacement entre les cartes */
            width: 600px; /* Largeur totale du jeu */
            margin: auto;
            perspective: 1000px;

        }

        .memory-card {
            width: 100%;


            height: 200px;
            position: relative;
            box-shadow: 1px 1px 1px rgba(0, 0, 0, .3);
            transform: scale(1);
            transform-style: preserve-3d;
            transition: transform .5s;
            cursor: pointer;

        }

        .memory-card img {
            width: 100%;
            height: 100%;
            position: absolute;


            backface-visibility: hidden;
        }

        .front-face {
            transform: rotateY(180deg);
        }

        .memory-card.flip {
            transform: rotateY(180deg);
        }

        .back-face {
            transform: rotateY(0deg);
}

        .memory-card:active {
            transform: scale(0.97);
            transition: transform .2s;

        }
    </style>

    {% block javascripts %}
        <script src="{{ asset('js/game.js') }}"></script>
    {% endblock %}

{% endblock %}
