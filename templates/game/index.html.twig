{% extends 'base.html.twig' %}

{% block title %}Memory Game{% endblock %}

{% block body %}
    <div class="bg-gray-900 text-gray-200 flex flex-col min-h-screen">
        <header class="bg-gray-800 py-6">
            <h1 class="text-center text-4xl font-bold">MemorEase</h1>
            <p class="text-center text-lg mt-2">Un espace dédié à l'orthophonie et à l'apprentissage ludique</p>
        </header>

        <nav class="bg-gray-700 py-4">
            <div class="max-w-4xl mx-auto flex justify-center items-center space-x-6">
                <a href="../home" class="text-gray-200 hover:text-blue-400 transition duration-300 ease-in-out">Accueil</a>
                <a href="../game" class="text-gray-200 hover:text-blue-400 transition duration-300 ease-in-out">Jeu</a>
                <a href="../score" class="text-gray-200 hover:text-blue-400 transition duration-300 ease-in-out">Scores</a>
                <a href="../profil" class="text-gray-200 hover:text-blue-400 transition duration-300 ease-in-out ml-8">Profil</a>
                <a href="../login" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 hover:shadow-lg transition duration-300 ease-in-out">Se connecter</a>
            </div>
        </nav>

        <main class="flex-grow p-6">
            <h2 class="text-3xl font-bold text-center mb-6">Jeu de Mémoire</h2>

            <section class="memory-game mx-auto">
                <!-- Grille 5x5 des cartes du jeu Memory (non fonctionnel) -->
                {% for i in 1..25 %}
                    <div class="memory-card">
                        <img class="front-face" src="/images/card-front-placeholder.jpg" alt="Front Face" />
                        <img class="back-face" src="/images/card-back-placeholder.jpg" alt="Back Face" />
                    </div>
                {% endfor %}
            </section>
        </main>

        <footer class="bg-gray-800 py-4">
            <div class="text-center">
                <p>&copy; 2024 MemorEase. Tous droits réservés.</p>
                <p><a href="#" class="text-blue-400 hover:underline">Contactez-nous</a></p>
            </div>
        </footer>
    </div>

    <style>
        /* Styles de la grille du jeu Memory */
        .memory-game {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            grid-template-rows: repeat(5, 1fr);
            gap: 10px;
            max-width: 600px;
            margin: auto;
        }

        .memory-card {
            width: 100%;
            padding-bottom: 100%;
            position: relative;
            perspective: 1000px;
            cursor: pointer;
            border-radius: 10px;
            overflow: hidden;
            background-color: #444;
            box-shadow: 1px 1px 10px rgba(0, 0, 0, 0.3);
            transition: transform 0.5s ease;
        }

        .memory-card img {
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            backface-visibility: hidden;
        }

        .memory-card .front-face {
            z-index: 2;
            transform: rotateY(0deg);
        }

        .memory-card .back-face {
            transform: rotateY(180deg);
        }

        /* Effet au survol */
        .memory-card:hover {
            transform: scale(1.05);
        }
    </style>
{% endblock %}
