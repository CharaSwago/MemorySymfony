{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ user.username }} ! âœ…</h1>
    
    <a href="{{ path('app_logout') }}" class="btn btn-primary">Logout</a>
    <br>
    <a href="{{ path('app_admin_add_patient') }}" class="btn btn-primary">Add patient</a>

    <h2>List</h2>

    <h3>Patients</h3>
<ul>
    {% for patient in user.patients %}
    <tr>
        <li>{{ patient.username}} {{ patient.email }} </li>
        <form method="post" action="{{ path('app_admin', {id: patient.id}) }}" onsubmit="return confirm('Are you sure you want to delete this patient?');">
            <input type="hidden" name="_token" value="{{ 'delete-patient-' ~ patient.id }}">
            <button class="btn btn-danger">Delete</button>
        </form>
    <tr>
    {% endfor %}
</ul>
</div>
{% endblock %}
