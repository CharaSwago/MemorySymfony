{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="bg-gray-900 text-gray-200 flex flex-col min-h-screen">
        <header class="bg-gray-800 py-6">
            <h1 class="text-center text-4xl font-bold">MemorEase</h1>
            <p class="text-center text-lg mt-2">Un espace dédié à l'orthophonie et à l'apprentissage ludique</p>
        </header>

        <nav class="bg-gray-700 py-4">
            <div class="max-w-4xl mx-auto flex justify-center items-center space-x-6">
                <a href="../home" class="text-gray-200 hover:text-blue-400 transition duration-300 ease-in-out">Accueil</a>
                <a href="../game" class="text-gray-200 hover:text-blue-400 transition duration-300 ease-in-out">Jeu</a>
                <a href="../score" class="text-gray-200 hover:text-blue-400 transition duration-300 ease-in-out">Scores</a>
                <a href="../profil" class="text-gray-200 hover:text-blue-400 transition duration-300 ease-in-out ml-8">Profil</a>

                {% if app.user %}
                    <!-- Show logout button if user is logged in -->
                    <a href="{{ path('app_logout') }}" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 hover:shadow-lg transition duration-300 ease-in-out">Se déconnecter</a>
                {% else %}
                    <!-- Show login button if user is not logged in -->
                    <a href="../login" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 hover:shadow-lg transition duration-300 ease-in-out">Se connecter</a>
                {% endif %}
            </div>
        </nav>

        <div class="flex items-center justify-center flex-grow">
            <form method="post" class="bg-gray-800 shadow-lg rounded-lg px-8 pt-6 pb-8 mb-4 w-full max-w-sm">
                {% if error %}
                    <div class="alert alert-danger mb-4 text-red-500">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3 text-green-300">
                        Vous êtes connecté en tant que {{ app.user.userIdentifier }}
                    </div>
                {% endif %}

                <h1 class="text-2xl font-bold mb-6 text-center text-white">Veuillez vous connecter</h1>

                <label for="username" class="block text-gray-300 text-sm font-bold mb-2">Email</label>
                <input type="email" name="_username" id="username" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-200 leading-tight focus:outline-none focus:shadow-outline bg-gray-700 placeholder-gray-500" placeholder="Entrez votre email" autocomplete="email" required autofocus>

                <label for="password" class="block text-gray-300 text-sm font-bold mb-2 mt-4">Mot de passe</label>
                <input type="password" name="_password" id="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-200 leading-tight focus:outline-none focus:shadow-outline bg-gray-700 placeholder-gray-500" placeholder="Entrez votre mot de passe" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {% if not app.user %}
                    <button class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded w-full mt-6 transition duration-300 ease-in-out" type="submit">
                        Se connecter
                    </button>
                {% endif %}

                <p class="mt-4 text-center text-gray-400">
                    <a href="#" class="text-blue-400 hover:underline">Mot de passe oublié ?</a>
                </p>
            </form>
        </div>

        <footer class="bg-gray-800 py-4">
            <div class="text-center">
                <p>&copy; 2024 MemorEase. Tous droits réservés.</p>
                <p><a href="#" class="text-blue-400 hover:underline">Contactez-nous</a></p>
            </div>
        </footer>
    </div>
{% endblock %}
